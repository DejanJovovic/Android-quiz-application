<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color"
    tools:context=".slagalica.activities.Results">

    <ImageView
        android:id="@+id/image_view_congratulations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/congratulations">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_below="@id/image_view_congratulations"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/you_have_successfully_completed_the_quiz"
            android:textColor="@color/edit_text_asosijacije"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_view_total_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="@string/your_total_score_is"
            android:layout_marginTop="24dp"
            tools:textColor="@color/edit_text_asosijacije"
            android:textColor="@color/edit_text_asosijacije"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif"/>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_back_to_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_to_home"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:elevation="0dp"
        android:background="@drawable/round_green"/>


</RelativeLayout>
