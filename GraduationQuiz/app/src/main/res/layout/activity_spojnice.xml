<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="16dp"
    tools:context=".slagalica.activities.Spojnice">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/edit_text_asosijacije"
            android:text="@string/the_subject"
            android:textColor="@color/white" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_left_1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                android:text="@string/_1"
                android:textColor="@color/blue" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_right_5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:background="@drawable/round_white"
                android:text="@string/_5"
                android:textColor="@color/blue" >

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_left_2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                android:text="@string/_2"
                android:textColor="@color/blue" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_right_4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:background="@drawable/round_white"
                android:text="@string/_4"
                android:textColor="@color/blue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_left_3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                android:text="@string/_3"
                android:textColor="@color/blue" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_right_3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:background="@drawable/round_white"
                android:text="@string/_3"
                android:textColor="@color/blue" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_left_4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                android:text="@string/_4"
                android:textColor="@color/blue" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_right_2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:background="@drawable/round_white"
                android:text="@string/_2"
                android:textColor="@color/blue" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_left_5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                android:text="@string/_5"
                android:textColor="@color/blue" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_right_1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:background="@drawable/round_white"
                android:text="@string/_1"
                android:textColor="@color/blue" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>