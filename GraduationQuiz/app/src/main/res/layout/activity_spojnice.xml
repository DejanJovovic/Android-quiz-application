<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background6"
    android:padding="16dp"
    tools:context=".slagalica.activities.Spojnice">


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="#EDEAEA"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_time_left"
                android:layout_width="38dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_subject"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/round_pink"
            tools:text="@string/the_subject"
            tools:textColor="@color/textColor"
            android:textAllCaps="false"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_left_1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                tools:text="@string/_1"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_right_5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:background="@drawable/round_white"
                tools:text="@string/_5"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_left_2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                tools:text="@string/_2"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_right_4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:background="@drawable/round_white"
                tools:text="@string/_4"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_left_3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                tools:text="@string/_3"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_right_3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:background="@drawable/round_white"
                tools:text="@string/_3"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_left_4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                tools:text="@string/_4"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_right_2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:background="@drawable/round_white"
                tools:text="@string/_2"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_left_5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white"
                tools:text="@string/_5"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_right_1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:background="@drawable/round_white"
                tools:text="@string/_1"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColor" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>